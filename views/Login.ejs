  <body>
    <div class="wrapper">
      <form action="/user/Login" method="POST">
        <h2>Login</h2>
        <div class="input-field">
          <input
            type="text"
            id="email"
            name="email"
            placeholder="Email Id"
            required
          />
          <label>Enter your email</label>
        </div>
        <div class="input-field">
          <input
            type="text"
            id="password"
            name="password"
            placeholder="Password"
            required
          />
          <label>Enter your password</label>
        </div>
        <div class="forget">
          <label for="remember">
            <input type="checkbox" id="remember" />
            <p>Remember me</p>
          </label>
          <a href="#">Forgot password?</a>
        </div>
        <button type="submit">Log In</button>
        <div class="register">
          <p>Don't have an account? <a href="/user/Signin">Register</a></p>
        </div>
      </form>
    </div>
  </body>
